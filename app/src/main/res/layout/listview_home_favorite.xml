<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/listview_main_favorite_linearLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/frame_01"
    android:layout_margin="5dp"
    android:padding="10dp">

    <ImageView
        android:id="@+id/listview_main_favorite_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:scaleType="fitCenter"
        android:src="@drawable/som1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:orientation="vertical">

        <RatingBar
            android:id="@+id/listview_main_favorite_ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="3dp"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:numStars="5"
            android:rating="0"
            android:isIndicator="true"/>

        <TextView
            android:id="@+id/listview_main_favorite_nmTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="shopNm"
            android:textSize="19sp"
            android:textColor="#000000"/>

        <TextView
            android:id="@+id/listview_main_favorite_addressTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="address"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom|right"
            android:orientation="horizontal">
        <ImageButton
            android:id="@+id/listview_main_favorite_favoriteBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="5dp"
            android:background="#ffffff"
            android:scaleType="fitCenter"
            android:src="@drawable/icon_favorite" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>